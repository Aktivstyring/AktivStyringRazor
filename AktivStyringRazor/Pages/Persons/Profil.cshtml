@page "{id}"
@model AktivStyringRazor.Pages.Persons.ProfilModel
@{
    ViewData["Title"] = "Profil";
}

<h2>Profil</h2>
<div><p><b>Navn:</b> @Model.Person.Navn;</p></div>
<div><p><b>Email:</b> @Model.Person.Email;</p></div>
<div><p><b>TelefonNr:</b> @Model.Person.Telefon.ToString();</p></div>
<div><p><b>MedlemsNr:</b> @Model.Person.MedlemsNr;</p></div>
<div><p><b>PersonId:</b> @Model.Person.PersonId;</p></div>


<h2>Dine Udleveringer</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Aktivnummer
            </th>
            <th>
                Dato Udleveret
            </th>
            <th>
                Dato Indsamlet
            </th>
            <th>
                UdleveringsID
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AktivUdleveringer.Count() != 0)
        {
            @foreach (var item in Model.AktivUdleveringer)
            {
                <tr>
                    <td>@item.AktivID</td>
                    <td>@item.AktivIndsamlet</td>
                    <td>@item.AktivUddelt</td>
                    <td>@item.UdleveringsID</td>
                </tr>
            }
        }
</table>